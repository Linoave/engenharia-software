#include <stdio.h>

int main() {
    float numero, soma = 0.0, media;
    int contador = 0;

    printf("Digite números positivos para calcular a média.\n");
    printf("Digite 0 para encerrar a entrada.\n\n");

    while(1) {
        printf("Digite um número: ");
        scanf("%f", &numero);

        if(numero == 0) {
            break; // sai do laço quando o usuário digita 0
        }

        if(numero > 0) {
            soma += numero;   // soma apenas números positivos
            contador++;       // conta os números positivos
        } else {
            printf("Apenas números positivos serão considerados.\n");
        }
    }

    if(contador > 0) {
        media = soma / contador;
        printf("\nForam digitados %d números positivos.\n", contador);
        printf("A média dos números positivos é: %.2f\n", media);
    } else {
        printf("\nNenhum número positivo foi digitado.\n");
    }

    return 0;
}
